Ques :- https://practice.geeksforgeeks.org/problems/reverse-level-order-traversal/1

public ArrayList<Integer> reverseLevelOrder(Node node) 
    {   
        Queue<Node> q = new LinkedList<>();
        ArrayList<Integer> ans = new ArrayList<>();
        if(node == null) return ans;
        q.add(node);
        while(!q.isEmpty()){
            int counter = q.size();
            Node curr = q.remove();
            if(curr != null){
                ans.add(curr.data);
                if(curr.right != null)
                    q.add(curr.right);
                if(curr.left != null)
                    q.add(curr.left);
            }
        }
        Collections.reverse(ans);
        return ans;
