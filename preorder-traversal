    // iterative
    public List<Integer> preorderTraversal(TreeNode root) {
        ArrayList<Integer> ans = new ArrayList<>();
        Stack<TreeNode> st = new Stack<>();
        TreeNode curr = new TreeNode();
        st.push(root);

        while(!st.isEmpty()){
            curr = st.peek();
            st.pop();
            if(curr != null){
                ans.add(curr.val);
                st.push(curr.right);
                st.push(curr.left);
            }
        }
        return ans;
    }
